<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vNewsItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/vNewsUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Title"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        app:layout_constraintEnd_toStartOf="@id/vNewsCreatedAt"
        app:layout_constraintStart_toEndOf="@+id/vNewsImage"
        app:layout_constraintBottom_toTopOf="@id/vNewsText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vNewsText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Text"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintEnd_toStartOf="@id/vNewsLikeSelector"
        app:layout_constraintStart_toEndOf="@+id/vNewsImage"
        app:layout_constraintTop_toBottomOf="@+id/vNewsUser" />

    <TextView
        android:id="@+id/vNewsCreatedAt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Date"
        android:layout_marginStart="60dp"
        app:layout_constraintBottom_toTopOf="@id/vNewsLikeSelector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vNewsUser"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/vNewsImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/vNewsText"
        app:layout_constraintRight_toLeftOf="@id/vNewsText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/vNewsLikeSelector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vNewsText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vNewsCreatedAt" />
</androidx.constraintlayout.widget.ConstraintLayout>